<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <title>{% block title %}{% endblock %} - &lt;e&gt;Note</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <!--CSS for fonts-->
  <link rel="stylesheet" href="/static/stylesheets/fonts.css" />
  <link rel="stylesheet" href="/static/stylesheets/login.css" />
  <link rel="icon" type="image/x-icon" href="/static/images/logo/favicon.ico">
  <!--AVIF WebP support detection script-->
  <script src="/static/scripts/avif-webp.min.js"></script>
  <!--Unsupported browsers detection script-->
  <script src="/static/scripts/IE-NS-Detect.js"></script>
  <script>
    ShowUnsupportedAlert();
  </script>
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
  <!-- MDB -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <style>
    .img1 {
      background-image: url("/static/images/login/{{ bg_img }}.jpeg");

        {
          {
          custom_bg|safe
        }
      }
    }

    .webp .img1 {
      background-image: url("/static/images/login/{{ bg_img }}.webp");

        {
          {
          custom_bg|safe
        }
      }
    }

    .avif .img1 {
      background-image: url("/static/images/login/{{ bg_img }}.avif");

        {
          {
          custom_bg|safe
        }
      }
    }

    /* retina support */
    @media screen and (-webkit-min-device-pixel-ratio: 2),
    screen and (min-resolution: 192dpi),
    screen and (min-resolution: 2dppx) {
      .img1 {
        background-image: url("/static/images/login/{{ bg_img }}@2x.jpeg");

          {
            {
            custom_bg|safe
          }
        }
      }

      .webp .img1 {
        background-image: url("/static/images/login/{{ bg_img }}@2x.webp");

          {
            {
            custom_bg|safe
          }
        }
      }

      .avif .img1 {
        background-image: url("/static/images/login/{{ bg_img }}@2x.avif");

          {
            {
            custom_bg|safe
          }
        }
      }
    }
  </style>
</head>

<body class="img1">
  {% with messages = get_flashed_messages(with_categories=true) %}
  {% if messages %}
  {% for category, message in messages %}
  {% if category == 'error' %}
  <script>
    Swal.fire({
      icon: 'error',
      title: 'Oops...',
      text: "{{message|safe}}",
      customClass: {
        confirmButton: 'btn btn-primary',
      }
    })
  </script>
  {% else %}
  {% if category == 'success' %}
  <script>
    Swal.fire({
      icon: 'success',
      title: 'Success!',
      text: "{{message|safe}}",
      customClass: {
        confirmButton: 'btn btn-primary',
      }
    })
  </script>
  {% else %}
  {% if category == 'warning' %}
  <script>
    Swal.fire({
      icon: 'warning',
      title: 'Warning!',
      text: "{{message|safe}}",
      customClass: {
        confirmButton: 'btn btn-primary',
      }
    })
  </script>
  {% else %}
  {% if category == 'question' %}
  <script>
    Swal.fire({
      icon: 'question',
      title: 'Do you want to?',
      text: "{{message|safe}}",
      customClass: {
        confirmButton: 'btn btn-primary',
      }
    })
  </script>
  {% else %}
  {% if category == 'talert' %}
  <script>
    Swal.fire({
      icon: 'info',
      title: 'Info',
      showConfirmButton: false,
      timer: 1500,
      text: "{{message|safe}}",
      customClass: {
        confirmButton: 'btn btn-primary',
      }
    })
  </script>
  {% else %}
  <script>
    Swal.fire({
      icon: 'info',
      title: 'Info',
      text: "{{message|safe}}",
      customClass: {
        confirmButton: 'btn btn-primary',
      }
    })
  </script>
  {% endif %}
  {% endif %}
  {% endif %}
  {% endif %}
  {% endif %}
  {% endfor %}
  {% endif %}
  {% endwith %}
  <div class="box_center">
    <div class="login_blur_box">
      <a href="/"><i class="fa-sharp fa-solid fa-house home-icon"></i></a>
      <h1 class="e_title">&lt;e&gt;Note</h1>
      {% block form %}
      {% endblock %}
      <div class="account">
        {% block form_desc %}{% endblock %}
      </div>
      <br />
    </div>
  </div>
  <!-- MDB -->
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.js"></script>
</body>

</html>