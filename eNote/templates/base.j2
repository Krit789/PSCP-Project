<body>
  {% with messages = get_flashed_messages(with_categories=true) %}
  {% if messages %}
  {% for category, message in messages %}
  {% if category == 'error' %}
  <script>
    Swal.fire({
      icon: 'error',
      title: 'Oops...',
      text: "{{message|safe}}",
      customClass: {
        confirmButton: 'btn btn-primary',
      }
    })
  </script>
  {% else %}
  {% if category == 'success' %}
  <script>
    Swal.fire({
      icon: 'success',
      title: 'Success!',
      text: "{{message|safe}}",
      customClass: {
        confirmButton: 'btn btn-primary',
      }
    })
  </script>
  {% else %}
  {% if category == 'warning' %}
  <script>
    Swal.fire({
      icon: 'warning',
      title: 'Warning!',
      text: "{{message|safe}}",
      customClass: {
        confirmButton: 'btn btn-primary',
      }
    })
  </script>
  {% else %}
  {% if category == 'question' %}
  <script>
    Swal.fire({
      icon: 'question',
      title: 'Do you want to?',
      text: "{{message|safe}}",
      customClass: {
        confirmButton: 'btn btn-primary',
      }
    })
  </script>
  {% else %}
  <script>
    Swal.fire({
      icon: 'info',
      title: 'Info',
      text: "{{message|safe}}",
      customClass: {
        confirmButton: 'btn btn-primary',
      }
    })
  </script>
  {% endif %}
  {% endif %}
  {% endif %}
  {% endif %}
